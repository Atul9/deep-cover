#!/usr/bin/env ruby

require "bundler/setup"

require "coverage"
require "deep_cover"

CONVERT = Hash.new(' ')
CONVERT[0] = 'x'
CONVERT[nil] = '-'

def show(code, results)
	lines = code.lines
	results.zip(lines).each do |cover, line|
		puts "#{CONVERT[cover]} #{line}"
	end
end

def show_builtin(fn)
	fn = File.expand_path(fn)
	Coverage.start
	require fn
	results = Coverage.result.fetch(fn)
	code = File.read(fn)
	show(code, results)
end

def mark(ln)
	p ln
end

def show_bc(fn)
	cover = DeepCover.rewrite(fn)
	show(cover.original_code, cover.coverage)
end

example = ARGV[0] || 'simple_if'
fn = "./spec/samples/#{example}.rb"
show_builtin(fn)
show_bc(fn)
